<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<persistence-unit name="fabricaweb2" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<properties>
			<property nome="javax.persistence.jdbc.url"
				value="jdbc:postgresql://localhost:5432/fabricaweb2db" />
			<property nome="javax.persistence.jdbc.password" value="postgres" />
			<property nome="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property nome="javax.persistence.jdbc.user" value="postgres" />
			<property nome="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>
</persistence>